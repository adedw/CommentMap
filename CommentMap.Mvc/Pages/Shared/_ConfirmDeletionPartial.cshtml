<div class="modal fade" tabindex="-1" aria-labelledby="confirm-deletion-title" role="dialog" aria-hidden="true" data-bind="modal: confirmDeletePopup">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="confirm-deletion-title">Confirm deletion</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <p>Are you sure you want to delete &quot;<span data-bind="text: confirmDeletePopup.title"></span>&quot; comment?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form asp-page-handler="DeleteComment" id="confirm-deletion-form">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
